def count_words(num):
    with open("text.txt", 'r') as file:
        file_read = file.read()
        list_of_words = file_read.split()
    list_of_words = [x.replace(",", "") for x in list_of_words]
    counter = {word: 0 for word in list_of_words}
    [counter.update({word: counter[word] + 1}) for word in list_of_words]
    sorted_words = sorted(counter.items(), key=lambda x: x[1], reverse=True)
    for i in range(num):
        print(sorted_words[i][0], sorted_words[i][1])


count_words(2)